<?php 

if ($_SERVER['REQUEST_METHOD'] == 'POST') {

	$errors = array();
  if (empty($_POST['movie_id'])) {
    $errors[] = 'You forgot to choose your Movie.';
  } else {
    $mi = mysqli_real_escape_string($dbc, trim($_POST['theater']));
  }
  if (empty($_POST['time'])) {
    $errors[] = 'You forgot to choose the time';
  } else {
    $t = mysqli_real_escape_string($dbc, trim($_POST['time']));
  }
  if (empty($_POST['zipcode'])) {
    $errors[] = 'You forgot to specify the location';
  } else {
    $zip = mysqli_real_escape_string($dbc, trim($_POST['num_tickets']));
  } 
	$mi = trim($_POST['movie_id']);
	$t = trim($_POST['time']);
	$zip = trim($_POST['zipcode'])
			
	echo "<p>The result of checking<br /><b>$pattern</b><br />against<br />$subject<br />is ";
	
	if (preg_match_all ($mi, $t, $zip, $matches) ) {
		echo 'TRUE!</p>';
		
		echo '<pre>' . print_r($matches, 1) . '</pre>';
		
	} else {
		echo 'FALSE!</p>';
	}
	
} 
